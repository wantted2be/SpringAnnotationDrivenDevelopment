<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!--包扫描，只要是标注了@Controller,@service,@Repository,@Component-->
    <context:component-scan base-package="com.company.spring.bean"></context:component-scan>
    <bean class="com.company.spring.bean.Person" id="person" init-method="init" destroy-method="destroy">
        <property name="name" value="张三"></property>
        <property name="age" value="48"></property>
    </bean>
</beans>